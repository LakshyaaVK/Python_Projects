score = 0  

print("Welcome to my quiz game")
is_playing = input("Do you want to play this quiz game? (yes/no): ").strip().lower()

if is_playing == "yes":
    print("GREAT!!")
else:
    print("Game exited")
    quit()  

# First Question
print("\n1st Question:")
a = input("What is the full form of RBI? ").strip().lower()  

if a == "reserve bank of india":
    print("‚úÖ CORRECT ANSWER!")
    score += 1
else:
    print("‚ùå WRONG ANSWER! The correct answer is 'Reserve Bank of India'.")

print("Score:", score, "/3")  

# Second Question
print("\n2nd Question:")
a = input("What is the full form of ATM? ").strip().lower()  

if a == "automated teller machine": 
    print("‚úÖ CORRECT ANSWER!")
    score += 1
else:
    print("‚ùå WRONG ANSWER! The correct answer is 'Automated Teller Machine'.")

print("Score:", score, "/3")  

# Third Question
print("\n3rd Question:")
a = input("What is the full form of WHO? ").strip().lower()  

if a == "world health organization": 
    print("‚úÖ CORRECT ANSWER!")
    score += 1
else:
    print("‚ùå WRONG ANSWER! The correct answer is 'World Health Organization'.")

print("\nFINAL SCORE:", score, "/3")

# Score Evaluation Messages
if score == 0:
    print("üòÇ lol, you're too dumb!")
elif score == 1:
    print("üò¨ Pretty mehhh score.")
elif score == 2:
    print("üòä Good score!")
